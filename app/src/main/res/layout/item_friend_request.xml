<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@android:color/transparent"
    android:gravity="center_vertical">

    <!-- ImageView para el icono del amigo -->
    <ImageView
        android:id="@+id/friendIconImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_profile"
        android:layout_marginEnd="8dp"
         />

    <!-- TextView para el nombre y apellido del amigo -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/friendNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del amigo"
            android:textSize="19sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/friendLastNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellido del amigo"
            android:textSize="16dp"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>

    <!-- Botón para aceptar la solicitud -->
    <Button
        android:id="@+id/acceptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:backgroundTint="@color/green"
        android:textColor="@android:color/white" />

    <!-- Botón para rechazar la solicitud -->
    <Button
        android:id="@+id/rejectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rechazar"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:layout_marginStart="8dp" />
</LinearLayout>
