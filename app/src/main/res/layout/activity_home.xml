<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Barra de navegación -->
    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Icono de notificaciones -->
        <ImageView
            android:id="@+id/imageViewNotifications"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_notificacion"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"/>

        <!-- Icono de amigos -->
        <ImageView
            android:id="@+id/imageViewSearchIcon"
            android:layout_width="182dp"
            android:layout_height="97dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_lupa" />

        <ImageView
            android:id="@+id/imageViewFriends"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_amigos"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"/>

        <!-- Espacio en blanco para el logo o título -->
        <ImageView
            android:id="@+id/imageViewMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_hamburguesa" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- Icono de menú hamburguesa -->

    </LinearLayout>

    <!-- Barra de búsqueda -->
    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/navigationBar"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Icono de búsqueda -->

        <!-- Campo de búsqueda -->
        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Buscar personas"
            android:inputType="text" />

    </LinearLayout>

    <!-- Contenido principal (publicaciones, etc.) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchBar"
        android:padding="16dp">

        <!-- Aquí puedes colocar el contenido principal de tu aplicación, como publicaciones, etc. -->

    </RelativeLayout>

</RelativeLayout>

